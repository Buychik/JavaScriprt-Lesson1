//Ели честно, мало что вообще понял, т.к. просто перегружен вёрсткой, где пока не применял JavaScript вообще ни разу - это работа программиста в холдинге

var i = 1;
// Желаемое количество строк
var max = 8;
var sign = "#";
while (i < max)
{
    sign = "#";
    for (i = 1; i < 2 * i + 1; i++) sign += "#";
    console.log(sign);
    alert(i);
}
